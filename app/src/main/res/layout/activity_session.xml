<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <pl.michalboryczko.exercise.ui.session.MenuButton
        android:id="@+id/createSessionMenuButton"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:buttonText="CREATE SESSION"
        app:color="@color/color1"
        app:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <pl.michalboryczko.exercise.ui.session.MenuButton
        android:id="@+id/joinSessionMenuButton"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/createSessionMenuButton"
        app:buttonText="JOIN SESSION"
        app:color="@color/color2" />

    <pl.michalboryczko.exercise.ui.session.MenuButton
        android:id="@+id/mySessionsMenuButton"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:buttonText="MY SESSIONS"
        app:color="@color/color3"
        app:layout_constraintTop_toBottomOf="@+id/createSessionMenuButton"
        app:layout_constraintLeft_toLeftOf="parent" />

    <pl.michalboryczko.exercise.ui.session.MenuButton
        android:id="@+id/logoutMenuButton"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:buttonText="LOGOUT"
        app:color="@color/color4"
        app:layout_constraintTop_toBottomOf="@+id/joinSessionMenuButton"
        app:layout_constraintLeft_toRightOf="@id/mySessionsMenuButton" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>